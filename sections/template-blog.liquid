<div class="py-8">
    {% paginate blog.articles by section.settings.number_of_blog_posts %}

        <h1 class="text-center text-3xl">{{ blog.title }}</h1>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for article in blog.articles %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                            <a href="{{ article.url }}">
                                {% if article.image %}
                                    <img
                                        class="w-full h-80 object-cover"
                                        src="{{ article.image | img_url: 'large' }}"
                                        alt="{{ article.image.alt }}">
                                {% else %}
                                    {{ "image" | placeholder_svg_tag: 'w-full h-80 object-cover bg-gray-100' }}
                                {% endif %}
                            </a>
                            <div class="p-4">
                                <h1 class="text-xl font-medium my-4" style="color:{{ section.settings.title_color }}">{{ article.title }}</h1>

                                {% if section.settings.show_description %}
                                    {% if article.excerpt.size > 0 %}
                                        {{ article.excerpt | strip_html | truncatewords: 15, '...' }}
                                    {% else %}
                                        <p>{{ article.content | strip_html | truncatewords: 15, '...' }}</p>
                                    {% endif %}
                                {% endif %}
                                <a href="{{ article.url }}" class="font-medium text-blue-600 hover:text-blue-800 my-4">{{ section.settings.read_more }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="max-w-6xl mx-auto">
            {% render 'pagination', pagination: paginate %}
        </div>
    {% endpaginate %}
</div>

{% schema %}
    {
        "name": "Template Blog",
        "settings": [
            {
                "type": "text",
                "id": "read_more",
                "label": "Readmore label",
                "default": "Read more"
            }, {
                "type": "range",
                "id": "number_of_blog_posts",
                "step": 1,
                "min": 1,
                "max": 6,
                "label": "Blog posts per page",
                "default": 3
            }, {
                "type": "checkbox",
                "id": "show_description",
                "label": "Show Description",
                "default": true
            }, {
                "type": "color",
                "id": "title_color",
                "label": "Title color",
                "default": "#000000"
            }
        ]
    }
{% endschema %}